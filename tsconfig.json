{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    ".eslintrc.cjs",
    "tailwind.config.ts"
  ]
}
