---
import { getEntries } from "astro:content";
import { getCollection } from "astro:content";

import MainLayout from "@/layouts/main-layout.astro";
import Link from "@/components/link.astro";
import ProjectCoverControls from "@/components/project-cover-controls.astro";
import ProjectCover from "@/components/project-cover.astro";
import { ArrowRight } from "lucide-astro";

let posts = await getCollection("posts", (post) => post.data.published);
posts = posts.sort((a, b) => b.data.posted.getTime() - a.data.posted.getTime()).slice(0, 3);

const projects = await getEntries([
  { collection: "projects", id: "mini-minecraft" },
  { collection: "projects", id: "door" },
]);
---

<MainLayout
  meta={{
    kind: "route",
    title: null,
    description: "Computer graphics student at the University of Pennsylvania.",
    ogImageParams: "Graphics programming, games, websites.",
  }}
  useVerticalSpacing
>
  <section class="space-y-6">
    <p class="animate-fade [--order:0]">
      Hi! I'm a third year student in the Digital Media Design program at UPenn. I'm concurrently
      finishing a Master's in Computer Graphics and Game Technology. I like graphics programming and
      design.
    </p>

    <p class="animate-fade [--order:1]">
      At school I co-lead our game dev club called <Link
        href="https://pennupgrade.com"
        target="_blank">UPGRADE</Link
      >, and am a member of our SIGGRAPH chapter. Last summer I interned on the Effects team at
      TikTok in San Jose.
    </p>

    <p class="subtitle animate-fade [--order:2]">
      In my free time I like running, making playlists, learning the bass guitar, and riding SEPTA.
      Thanks for visiting. <span aria-hidden="true" class="cursor-mewo whitespace-nowrap"
        >(〜￣▽￣)〜</span
      >
    </p>
  </section>

  <section class="space-y-4">
    <div
      class="flex animate-fade items-center gap-3.5 text-[36px] font-bold leading-none [--order:1]"
    >
      <h2 class="cursor-default text-sweater-5">Projects</h2>
      <a href="/projects" class="text-sweater-7 transition-colors hover:text-sweater-6">
        View all
      </a>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-1">
      {
        projects.map(({ data: { name, metadata, cover }, id }, idx) => (
          <a
            href={`/projects/${id}`}
            class="group relative h-fit animate-fade transition-opacity"
            style={{ "--order": idx }}
          >
            <ProjectCover
              id={id}
              cover={cover}
              useVideo={{ small: true }}
              class="overflow-hidden rounded-xl transition group-hover:scale-[0.93] group-hover:opacity-50"
            />

            <div class="absolute inset-x-0 bottom-0 space-y-4 rounded-b-xl bg-sweater-9 px-4 transition-[background-color_border-radius] group-hover:rounded-t-xl group-hover:bg-sweater-8">
              <div class="grid grid-rows-[0fr] transition-[grid-template-rows] group-hover:grid-rows-[1fr]">
                <div class="overflow-hidden text-pretty opacity-0 transition-opacity group-hover:opacity-100">
                  <div aria-hidden="true" class="h-4" />

                  <div class="flex items-center justify-between gap-4">
                    <div>
                      <h2>{name}</h2>
                      <li class="flex flex-wrap gap-x-2">
                        {metadata.tech.map((tech, idx) => (
                          <ul class="berkeley text-sweater-5">
                            <span>{tech}</span>
                            {idx !== metadata.tech.length - 1 ? (
                              <span aria-hidden="true" class="text-sweater-7">
                                /
                              </span>
                            ) : null}
                          </ul>
                        ))}
                      </li>
                    </div>

                    <div
                      aria-hidden="true"
                      class="rounded-full bg-sweater-8 p-1 transition-colors group-hover:bg-sweater-7"
                    >
                      <ArrowRight class="shrink-0 stroke-sweater-6 transition-colors group-hover:stroke-sweater-4" />
                    </div>
                  </div>

                  <div aria-hidden="true" class="h-4" />
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </section>

  <section class="space-y-4">
    <div
      class="flex animate-fade items-center gap-3.5 text-[36px] font-bold leading-none [--order:2]"
    >
      <h2 class="cursor-default text-sweater-5">Recent posts</h2>
      <a href="/posts" class="text-sweater-7 transition-colors hover:text-sweater-6"> View all </a>
    </div>

    <ul class="flex flex-col [--fade-speed:50ms]">
      {
        posts.map((post, idx) => {
          const {
            data: { title, posted },
            id,
          } = post;

          return (
            <li
              class="group animate-fade border-t-thin border-sweater-9"
              style={{ "--order": idx + 2 }}
            >
              <a
                href={`/posts/${id}`}
                class="flex flex-col justify-between py-4 *:transition-colors xs:flex-row xs:gap-4"
              >
                <h2 class="subtitle text-pretty group-hover:text-sweater-1">{title}</h2>

                <time
                  datetime={posted.toISOString()}
                  class="berkeley text-sweater-5 group-hover:text-sweater-3"
                >
                  {posted.toLocaleDateString("en-US", {
                    month: "long",
                    day: "numeric",
                    timeZone: "America/New_York",
                  })}
                </time>
              </a>
            </li>
          );
        })
      }
    </ul>
  </section>
</MainLayout>
