---
import type { HTMLAttributes } from "astro/types";

type Props = Omit<HTMLAttributes<"a">, "aria-label"> & {
  noUnderline?: boolean;
};

const { target, title, class: className, noUnderline, ...props } = Astro.props;
---

<a
  target={target}
  aria-label={title}
  title={title}
  class:list={[
    "w-fit text-link-primary decoration-sweater-2/50 decoration-1 underline-offset-3 transition-[color_opacity] not-dark:decoration-sweater-6/40 hover:text-link-primary-hover hover:decoration-sweater-2/90 not-dark:hover:decoration-sweater-10/70",
    { underline: noUnderline !== true },
    className,
  ]}
  {...props}><slot /></a
>
