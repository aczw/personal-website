---
import type { HTMLAttributes } from "astro/types";

type Props = Omit<HTMLAttributes<"a">, "aria-label"> & {
  noUnderline?: boolean;
};

const { target, title, class: className, noUnderline, ...props } = Astro.props;
---

<a
  target={target}
  aria-label={title}
  title={title}
  class:list={[
    "text-sweater-3 decoration-sweater-3/50 hover:text-sweater-1 hover:decoration-sweater-2 w-fit decoration-1 underline-offset-2 transition-[color_opacity]",
    { underline: noUnderline !== true },
    className,
  ]}
  {...props}><slot /></a
>
