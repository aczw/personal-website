---
import Logo from "@/components/logo.astro";
import { Button } from "@/components/react/button";
import { Link } from "@/components/react/link";
import { removeTrailingSlash } from "@/utils/remove-trailing-slash";
import { FileText, PaintBucket, TerminalSquare } from "lucide-astro";

// see https://github.com/withastro/astro/issues/5248
const { pathname } = Astro.url;
const path = removeTrailingSlash(pathname);
---

<header class="w-full bg-sweater-10 p-7">
  <nav class="flex items-center justify-between space-x-6">
    <a
      href="/"
      class="group flex items-center space-x-3"
    >
      <Logo
        width={30}
        height={30}
        alt="Go to home"
        className="fill-sweater-4 group-hover:rotate-[-10deg] group-hover:fill-sweater-1 transition"
      />
      {
        path !== "" ? (
          <p class="hidden font-bold text-sweater-4 transition group-hover:translate-x-1 group-hover:text-sweater-1 xs:block">
            Home
          </p>
        ) : null
      }
    </a>
    <div class="flex items-center space-x-6">
      <Link
        href="/projects"
        className={`flex items-center ${
          path === "/projects"
            ? "text-sweater-1 decoration-sweater-1/50 hover:text-sweater-4 hover:decoration-sweater-4"
            : ""
        }`}
      >
        <TerminalSquare
          size={16}
          class="mr-1 hidden xs:block"
        /> Projects
      </Link>

      <Link
        href="/portfolio"
        className={`flex items-center ${
          path === "/portfolio"
            ? "text-sweater-1 decoration-sweater-1/50 hover:text-sweater-4 hover:decoration-sweater-4"
            : ""
        }`}
      >
        <PaintBucket
          size={16}
          class="mr-1 hidden xs:block"
        /> Portfolio
      </Link>

      <a
        href="/resume.pdf"
        target="_blank"
        ><Button>
          <FileText
            size={16}
            class="mr-1 hidden xs:block"
          />Resume
        </Button></a
      >
    </div>
  </nav>
</header>
