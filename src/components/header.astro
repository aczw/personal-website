---
import Eye from "@/components/eye.astro";
import Slash from "@/components/slash.astro";

type Link = { href: string; text: string };

interface Props {
  links: Link[];
  description: string;
  maxColumns: 1 | 2;
}

const { links, description, maxColumns } = Astro.props;
---

<header
  class:list={[
    "mx-auto grid w-full grid-cols-1 gap-y-pad-2 px-pad-2 pt-pad-2 desktop:mt-10 desktop:w-4/5 desktop:p-pad lg:w-(--real-header-w)",
    { "gap-x-pad-2 sm:grid-cols-2 lg:gap-x-pad-4": maxColumns === 2 },
  ]}
>
  <div class="space-y-0.75">
    <nav class="flex items-start gap-x-1.5 font-bold *:leading-[0.8]">
      <a href="/" title="Home" class="block">
        <Eye
          aria-hidden="true"
          class="size-6 fill-link-primary transition-[fill_rotate] hover:-rotate-13 hover:fill-link-primary-hover"
        />
      </a>

      <Slash class="text-[1.9rem]" />

      {
        links.map(({ href, text }) => (
          <>
            <a
              href={href}
              class="text-[2.1rem] text-link-primary transition-colors hover:text-link-primary-hover"
            >
              {text}
            </a>
            <Slash class="text-[1.9rem]" />
          </>
        ))
      }
    </nav>

    <h1
      class="flex cursor-default items-center gap-x-2 text-4xl leading-[0.875] font-bold text-sweater-2 not-dark:text-sweater-8 md:text-5xl"
    >
      <slot name="title" />
    </h1>
  </div>

  <p class:list={["self-end-safe", { "max-w-125": maxColumns === 1 }]}>
    {description}
  </p>
</header>
