---
import Logo from "@/components/logo.astro";
import { Link } from "@/components/react/link";
import { cn } from "@/utils/cn";
import { removeTrailingSlash } from "@/utils/remove-trailing-slash";
import { FileText, TerminalSquare } from "lucide-astro";

const logoSize = 26;
const iconSize = 16;

const { pathname } = Astro.url;
const path = removeTrailingSlash(pathname);
---

<header class="fixed z-10 w-full bg-sweater-10 p-3">
  <nav class="max-w-content mx-auto flex items-center justify-between">
    <a
      href="/"
      class="group"
    >
      <Logo
        width={logoSize}
        height={logoSize}
        alt="Charles Wang"
        className="fill-sweater-4 transition group-hover:rotate-[-15deg] group-hover:fill-sweater-1"
      />
    </a>

    <div class="flex items-center space-x-6 pl-6">
      <Link
        href="/projects"
        className={cn(
          "flex items-center",
          `${
            path === "/projects" ? "text-sweater-1 decoration-sweater-1/50" : ""
          }`,
        )}
      >
        <TerminalSquare
          size={iconSize}
          class="mr-1 hidden xs:block"
        /> Projects
      </Link>

      <a
        href="/resume.pdf"
        target="_blank"
        class="flex items-center rounded-full bg-sweater-4 px-2.5 py-0.5 text-sweater-9 transition-colors hover:bg-sweater-2"
      >
        <FileText
          size={iconSize}
          class="mr-1 hidden xs:block"
        /> Resume
      </a>
    </div>
  </nav>
</header>
