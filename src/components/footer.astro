---
import { Github, Linkedin, Mail, Music, ScrollText } from "lucide-astro";

import LastFm from "@/components/last-fm.astro";
import Link from "@/components/link.astro";
---

<footer class="max-w-normal mx-auto pb-12">
  <div class="berkeley mx-8 flex items-center justify-between gap-4">
    <div class="w-1/2">
      <LastFm server:defer>
        <a
          href="https://www.last.fm/user/ashzw"
          target="_blank"
          class="pill flex w-fit gap-2 leading-[1.1]"
          data-quiet="true"
          slot="fallback"
        >
          <Music size={15} class="inline" /> Scrobbles
        </a>
      </LastFm>
    </div>

    <div class="flex w-1/2 items-center justify-end gap-3">
      <Link href="/_files/resume.pdf" target="_blank" title="Resume"><ScrollText size={24} /></Link>

      <Link href="https://www.linkedin.com/in/zwcharl/" target="_blank" title="LinkedIn"
        ><Linkedin size={24} /></Link
      >

      <Link href="https://www.github.com/aczw" target="_blank" title="GitHub"
        ><Github size={24} /></Link
      >

      <Link href="mailto:zwcharl@gmail.com" title="Email"><Mail size={24} /></Link>
    </div>
  </div>
</footer>
