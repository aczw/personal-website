---
import { Link } from "@/components/react/link";
import { Github, Linkedin, Mail } from "lucide-astro";

const fun = [
  "soitgoes",
  "aczw",
  "newfaces",
  "doitagain",
  "tilinfinity",
  "suboptimal",
  "theendisnever",
  "promiseme",
  "allitcosts",
];

const pick = fun[Math.floor(Math.random() * fun.length)];
const offset = Math.floor(Math.random() * pick.length);
const scrambled = pick.slice(offset) + pick.slice(0, offset);
---

<footer class="flex w-full items-center justify-between bg-sweater-10 p-4">
  <span class="flex items-center space-x-4">
    <Link
      href="https://www.linkedin.com/in/zwcharl/"
      title="LinkedIn"
      newTab
    >
      <Linkedin />
    </Link>
    <Link
      href="https://www.github.com/aczw"
      title="GitHub"
      newTab
    >
      <Github />
    </Link>
    <Link
      href="mailto:zwcharl@gmail.com"
      title="Email"
    >
      <Mail />
    </Link>
  </span>
  <p class="font-mono text-sm text-sweater-3">
    <i id="scroll">{scrambled}</i> ðŸ‘¾
  </p>
</footer>

<script>
  setInterval(() => {
    let scroll = document.getElementById("scroll");
    let text = scroll!.textContent;
    scroll!.textContent = text!.slice(1) + text![0];
  }, 400);
</script>
