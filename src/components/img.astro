---
import { cn } from "@/utils/cn";
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

interface Props extends Omit<HTMLAttributes<"img">, "src" | "alt"> {
  src: ImageMetadata | Promise<any>;
  alt: string;
  className?: string;
}

const { src, alt, className, style } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  class={cn("rounded-xl bg-sweater-9", className)}
  style={style}
/>
