---
import { cn } from "@/utils/cn";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata | Promise<any>;
  alt: string;
  className?: string;
}

const { src, alt, className } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  class={cn("rounded-xl bg-sweater-9", className)}
/>
