---
import type { Portfolio } from "@/utils/types";
import { Image } from "astro:assets";

interface Props {
  portfolio: Portfolio;
  index: number;
}

const { portfolio, index } = Astro.props;
---

<Image
  class="mb-6 animate-fade rounded-lg border-sweater-8 bg-sweater-9"
  style={{ "--delay": `${(index + 1) * 50}ms` }}
  src={import(`../assets/portfolio/${portfolio.imgName}.png`)}
  loading="eager"
  alt={portfolio.name}
/>
