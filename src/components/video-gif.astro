---
/**
 * @see https://web.dev/patterns/web-vitals-patterns/video/video-gif
 */

interface Props {
  className?: string;
  folder: string;
  vids: { name: string; type: string }[];
}

const { className, folder, vids } = Astro.props;
---

<video
  autoplay
  loop
  muted
  playsinline
  class:list={["rounded-xl bg-sweater-9", className]}
>
  {
    vids.map(({ name, type }) => (
      <source
        src={`/_files/${folder}/${name}`}
        type={type}
      />
    ))
  }
</video>
