---
import type { ContentEntryMap } from "astro:content";

// see https://web.dev/patterns/web-vitals-patterns/video/video-gif

interface Props {
  content: {
    collection: keyof ContentEntryMap;
    folder: string;
  };
  name: string;
}

const {
  content: { collection, folder },
  name,
} = Astro.props;
---

<video autoplay loop muted playsinline class="rounded-lg bg-sweater-9">
  <source src={`/_files/${collection}/${folder}/${name}.mp4`} type="video/mp4" />
</video>
