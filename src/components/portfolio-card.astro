---
import type { Portfolio } from "@/utils/types";
import { Image } from "astro:assets";

interface Props {
  portfolio: Portfolio;
}

const { portfolio } = Astro.props;
---

<Image
  class="mb-5 break-inside-avoid rounded-lg border-sweater-8"
  src={import(`../assets/portfolio/${portfolio.imgName}.png`)}
  alt={portfolio.name}
/>
