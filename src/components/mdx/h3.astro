---
import type { HTMLAttributes } from "astro/types";

import { HashIcon } from "@lucide/astro";

type Props = HTMLAttributes<"h3">;

const { id, ...props } = Astro.props;
---

<h3
  class="border-y-(length:--border-w) border-dashed border-line-dark px-0 font-bold text-link-primary transition-colors hover:bg-line-dark hover:text-link-primary-hover"
  id={id}
  {...props}
>
  <a href={`#${id}`} class="flex items-center justify-between gap-pad p-pad">
    <slot />

    <HashIcon size={18} class="stroke-icon" aria-hidden="true" />
  </a>
</h3>
