---
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

interface Props extends Omit<HTMLAttributes<"img">, "src" | "alt" | "class" | "loading"> {
  src: ImageMetadata | Promise<any>;
  alt: string;
  loading?: "eager" | "lazy" | null;
  className?: string;
}

const { src, alt, className, loading, style } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  class:list={["rounded-xl bg-sweater-9", className]}
  loading={loading}
  style={style}
/>
